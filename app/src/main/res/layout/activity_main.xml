<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myowncard.MainActivity">

    <ImageView
        android:src="@drawable/mother"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"

      />

    <ImageView
        android:src="@drawable/motherday"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sometimes it may not seem like it,but you're the only one that matters to me."
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:textColor="#EC407A"
        android:background="#F3E5F5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy mother's day!"
        android:textSize="38sp"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:textColor="#C51162"
        android:fontFamily="sans-serif-light"
       />
</RelativeLayout>
